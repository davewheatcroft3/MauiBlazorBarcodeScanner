             x:Class="MauiBlazorBarcodeScanner.CameraScannerView">
    <ContentView.Content>
        <BlazorWebView x:Name="_blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type razor:Main}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </ContentView.Content>
</ContentView>
